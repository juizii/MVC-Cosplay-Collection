                     <div class="offcanvas-body">
                        <div class="dropdown mt-3">
                           <ul class="navbar-nav m-auto">

                              <li class="nav-item">
                                 <a href="/login" class="nav-link py-3">Login</a>
                              </li>
                              <li class="nav-item">
                                 <a href="/signup" class="nav-link py-3">Sign Up</a>
                              </li>
                           </ul>
                        </div>
                     </div>
                  </div>
               </div>
